{
  "name": "iot-manager",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn && yarn rimraf dist && npx rimraf .husky && yarn tsc -p tsconfig-build.json && yarn prepare",
    "test": "jest --config ./jest.config.js --detectOpenHandles --forceExit",
    "test:watch": "yarn test -- --watch",
    "test:coverage": "yarn test -- --coverage",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "prepare": "husky install && npx husky add .husky/pre-commit 'yarn test' && npx husky add .husky/pre-push 'yarn test' "
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "eslint": "^8.12.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "express": "^4.17.3",
    "jest": "^27.5.1",
    "mongodb": "^5.1.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.2.0",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.180",
    "@types/mongodb": "^4.0.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "husky": "^8.0.3",
    "jest-mock-extended": "^3.0.3",
    "mockdate": "^3.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn eslint"
    }
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "yarn test --watchAll=false findRealatedTests --bail"
    ]
  }
}
